<html>
  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="books.scss">
    <title>show</title>
  </head>

  <body>

    <h1>Editing Book</h1>
    <%= form_with model: @book,url: update_list_path(@book.id) do |f|  %>
      <div class="field">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <label for="book_body">Body</label>
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit "Update Book" %>
      </div>
    <% end %>
    <%= link_to"Show",book_path(@book.id),class:"link" %> | <%= link_to"Back",books_path,class:"link" %>

  </body>
</html>